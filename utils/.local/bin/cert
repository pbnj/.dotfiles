#!/bin/bash

set -euo pipefail
[[ "${DEBUG:-}" == "true" ]] && set -x

URL="${1:-""}"

if [[ -n "${URL}" ]]; then
	echo | openssl s_client -showcerts -servername ${URL} -connect ${URL}:443 2>/dev/null | openssl x509 -inform pem -noout -text
else
	echo "Error: missing <URL> argument"
	echo "Usage: $0 <URL>"
	exit 1
fi
