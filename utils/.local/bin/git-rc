#!/usr/bin/env bash

set -eou pipefail
[[ "${DEBUG:-}" == "true" ]] && set -x

RCTEMPLATE="${1:-}"

GIT_ROOT="$(git rev-parse --show-toplevel)"

fzf-tmux \
  -p '80%' \
  --reverse \
  --multi \
  --bind "start:reload:find ${HOME}/.vim/templates/* -type d" \
  --query "${RCTEMPLATE}" |
  xargs -t -I{} cp -R {}/ ${GIT_ROOT}/
