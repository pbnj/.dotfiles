#!/bin/bash

# Project Manager.
# Launch any project from ~/Projects directory in a new tmux window.

set -eou pipefail

SELECTED="$(find ~/Projects -type d -not \( -path '*.git*' -prune \) -not \( -path '*.terraform*' -prune \) | fzf-tmux --multi --prompt 'Project(s)> ' || true)"

if test -n "${SELECTED}"; then
	for s in ${SELECTED}; do
		if [[ -n "${TMUX:-""}" ]]; then
			tmux new-window -c "${s}"
		else
			${EDITOR} "${s}"
		fi
	done
else
	exit 0
fi
