#!/bin/bash

# jam to some music
# requires `vlc`

set -eou pipefail

if ! hash vlc &>/dev/null; then
	echo "Could not find 'vlc' in \$PATH. Ensure 'vlc' is installed in \$PATH and try again."
	exit 1
fi

VLC_GENRE="${1:-""}"
VLC_URL=""

case "${VLC_GENRE}" in
lofi)
	VLC_URL="https://www.youtube.com/watch?v=fsyxinEBO8E"
	;;
synth)
	VLC_URL="https://www.youtube.com/watch?v=UedTcufyrHc"
	;;
minecraft)
	VLC_URL="https://youtu.be/iYMdmxgZZk0"
	;;
hacker)
	VLC_URL="https://www.youtube.com/watch?v=_daTfgc4u3k"
	;;
chill)
	VLC_URL="https://www.youtube.com/watch?v=qyPx0WQRcEo"
	;;
*)
	VLC_URL="https://www.youtube.com/watch?v=Bn-rqn8Hho4"
	;;
esac

vlc "${VLC_URL}"
